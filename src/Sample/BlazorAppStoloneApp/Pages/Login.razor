@using CodeNetUI_Example.Models
@using System.Text
@using CodeNetUI_Example.Services

@inject ISnackbar Snackbar
@inject LoginService LoginService

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Username" Required="true" RequiredError="User name is required!" @ref="username" />
        <MudTextField T="string" Label="Password" Required="true" RequiredError="Password is required!" InputType="InputType.Password" @ref="password"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Close</MudButton>
        <MudButton Color="Color.Primary" OnClick="GetLogin">Login</MudButton>
    </DialogActions>
</MudDialog>
@code {
    private bool _loading = false;
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    PagingResponse<JobWorkingDetailModel>? model;
    MudTextField<string> username;
    MudTextField<string> password;

    [Parameter]
    public int JobId { get; set; }

    private void Cancel() => MudDialog.Cancel();

    async Task GetLogin()
    {
        var token = await LoginService.GenerateToken(username.Value, password.Value);
        if (token is not null)
        {
            MudDialog.Close(DialogResult.Ok(true));
            Snackbar.Add("Successfull login.", Severity.Success);
            return;
        }

        Snackbar.Add("Fail login...", Severity.Error);
    }
}