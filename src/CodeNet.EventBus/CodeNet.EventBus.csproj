<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<IncludeSymbols>False</IncludeSymbols>
		<PackAsTool>False</PackAsTool>
		<PackageId>$(AssemblyName)</PackageId>
		<PackageIcon>ico.png</PackageIcon>
		<Title>CodeNet EventBus</Title>
		<Description>CodeNet EventBus package.</Description>
		<Copyright>Copyright 2025</Copyright>
		<Company>CodeNet</Company>
		<Version>1.1.4</Version>
		<Authors>CodeNet</Authors>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageProjectUrl>https://github.com/ahmetcandan/CodeNet_Example</PackageProjectUrl>
		<PackageTags>Asp.Net;.Net;Framework;CodeNet;Code;Net;EventBus;Subscriber;Publisher;Consumer;ConsumerGroup;TCP;Messaging</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\ico.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Update="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\CodeNet.Core\CodeNet.Core.csproj" />
		<ProjectReference Include="..\CodeNet.Socket\CodeNet.Socket.csproj" />
	</ItemGroup>

</Project>
